<%- include('./header'); %>
<div class="container">
    <div class="row">
        <div class="col-lg-4 col-sm-6">
        </div>
        <div class="col-lg-4 col-sm-6">
            <div class="card mt-4" style="padding: inherit;">                
                <form action="/login" method="POST">
                    <fieldset>
                        <legend class="form-label mt-4" style="text-align: center;"><u style="text-decoration-color: red;text-underline-offset: 2px;">Login</u></legend>
                        <% if(err_msg.length > 0) { %>
                            <div class="alert alert-danger m-b-0" id="ajax-alert" role="alert">
                                    <%= err_msg %>
                            </div><br>
                        <% } %>
                        <% if(success_msg.length > 0) { %>
                            <div class="alert alert-success m-b-0" role="alert">
                                    <%= success_msg %>
                            </div><br>
                        <% } %>
                        <div class="form-group">
                            <label class="form-label mt-1">Email</label>
                            <input type="email" name="email" id="email" placeholder="Enter your email" class="form-control input-lg"></input>
                            <p class="email_error"></p>
                        </div>
                        <div class="form-group">
                            <label class="form-label mt-1">Password</label>
                            <input type="password" name="password" id="password" placeholder="Enter your password" class="form-control input-lg"></input>
                        </div>
                        <div>
                            <div class="col-lg-10 mt-3 mb-2">
                                <center>
                                    <input type="submit"  id="login-btn" value="login" class="btn btn-primary">
                                    <a href="/registration"><input type="button"  id="registration" value="registration" class="btn btn-secondary"></a>
                                </center>
                            </div>
                        </div>
                    </fieldset>
            </div>
            </form>
        </div>
    </div>
</div>