<%- include('./header') %>
<div class="container">
    <% if(err_msg.length > 0) { %>
        <div class="alert alert-danger m-b-0" id="ajax-alert" role="alert">
                <%= err_msg %>
        </div><br>
    <% } %>
    <% if(success_msg.length > 0) { %>
        <div class="alert alert-success m-b-0" role="alert">
                <%= success_msg %>
        </div><br>
    <% } %>
    <div class="row">
        <div class="col-lg-4 col-sm-6">
        </div>
        <div class="col-lg-4 col-sm-6">
            <form action="/registration" method="POST">
                <fieldset>
                    <legend class="form-label mt-4" style="text-align:center;"><u style="text-decoration-color: red;text-underline-offset: 2px;">Registration</u></legend>
                    <div class="form-group">
                        <div>
                            <label class="form-label mt-1">Name</label>
                            <div class="form-group">
                                <input type="text" name="name" id="name"
                                placeholder="Enter your name" class="form-control input-lg"></input>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="form-label mt-1">Email</label>
                        <input type="email" name="email" id="email" placeholder="Enter your email" class="form-control input-lg"></input>
                    </div>
                    <div class="form-group">
                        <label class="form-label mt-1">Mobile</label>
                        <input type="mobile" name="mobile" id="mobile" placeholder="Enter your mobile number" class="form-control input-lg"></input>
                    </div>
                    <div class="form-group">
                        <label class="form-label mt-1">username</label>
                        <input type="username" name="username" id="username" placeholder="Enter your username" class="form-control input-lg"></input>
                    </div>
                    <div class="form-group">
                        <label class="form-label mt-1">Password</label>
                        <input type="password" name="password" id="password" placeholder="Enter your password" class="form-control input-lg"></input>
                    </div>
                    <div class="form-group">
                        <label class="form-label mt-1">Confirm Password</label>
                        <input type="passconf" name="passconf" id="passconf" placeholder="Confirm your password" class="form-control input-lg"></input>
                    </div>
                    <div>
                        <div class="col-lg-10">
                            <input type="submit" value="Submit" class="btn btn-primary">
                            <a href="/"><input type="button"  id="login" value="login" class="btn btn-success mt-2"></a>
                        </div>
                        </input>
                    </div>
        </div>
        </fieldset>
        </form>
    </div>
</div>